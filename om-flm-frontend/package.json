{
  "name": "nextjs-apollo-boilerplate",
  "version": "0.1.0",
  "description": "nextjs apollo boilerplate",
  "author": "YoungJin Lim <caribjin@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "javascript",
    "graphql",
    "boilerplate",
    "typescript",
    "apollo",
    "eslint",
    "reactjs",
    "nextjs",
    "prettier",
    "emotion",
    "chakra-ui"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest  --coverage --detectOpenHandles",
    "test:ci": "jest --ci --coverage --detectOpenHandles",
    "prepare": "husky install",
    "e2e:open": "cypress open",
    "e2e:run": "cypress run --browser chrome",
    "e2e:run:spec": "cypress run --browser chrome --spec",
    "e2e:run:staging": "cypress run --browser chrome --config-file stag.config.js"
  },
  "dependencies": {
    "@apollo/client": "3.8.7",
    "@chakra-ui/react": "2.8.2",
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@next/bundle-analyzer": "14.0.3",
    "@reduxjs/toolkit": "1.9.7",
    "axios": "1.6.2",
    "framer-motion": "10.16.5",
    "graphql": "16.8.1",
    "junit-merge": "^2.0.0",
    "next": "14.0.3",
    "next-auth": "4.24.5",
    "next-compose-plugins": "2.2.1",
    "prettier": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "8.1.3",
    "styled-components": "6.1.1",
    "subscriptions-transport-ws": "0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@faker-js/faker": "^8.3.1",
    "@next/eslint-plugin-next": "14.0.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/react": "18.2.39",
    "@types/react-redux": "7.1.31",
    "@types/styled-components": "5.1.32",
    "@typescript-eslint/eslint-plugin": "6.13.0",
    "@typescript-eslint/parser": "6.13.0",
    "babel-plugin-styled-components": "2.1.4",
    "cypress": "^13.6.0",
    "cypress-mochawesome-reporter": "^3.7.0",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-recurse": "^1.35.2",
    "dotenv": "16.3.1",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "^8.0.3",
    "isomorphic-unfetch": "4.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nock": "13.4.0",
    "ts-jest": "29.1.1",
    "typescript": "5.3.2"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  }
}
